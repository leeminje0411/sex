<div class="ms-auto d-flex align-items-center " id="authArea">
    <% if (username) { %>
        <div class="dropdown">
            <button class="btn btn-warning dropdown-toggle d-flex align-items-center custom-btn-shape" type="button"
                id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="<%= username.profile %>" alt="Profile" class="rounded-circle profile-img-fixed profile-img">
                <span class="ms-2 shibal1 username-spacing">
                    <%= username.username %>
                </span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/profile">내 프로필</a></li>
