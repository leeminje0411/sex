                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item text-danger" href="/login/logout">로그아웃</a></li>
            </ul>
        </div>
        <% } else { %>
            <!-- 로그인 버튼: 모달 오픈 트리거 -->
            <button id="loginButton"type="button" class="btn btn-warning custom-btn-shape" data-bs-toggle="modal" data-bs-target="#loginModal">
                로그인
            </button>
            <% } %>
</div>


