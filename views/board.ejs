<body>
    <% include partials/navbar %>

        <section class="bg-success-subtle bg-opacity-75 d-flex align-items-center justify-content-center"
            style="min-height: 30vh;">
            <figure class="text-center">
                <blockquote class="blockquote">
                    <p class="h1">심심해서 나온 사이트</p>
                    <p class="display-10">이민제</p>
                </blockquote>
                <figcaption class="blockquote-footer">
                    Someone famous in <cite title="Source Title">Source Title</cite>
                </figcaption>
            </figure>
        </section>

        <!-- 카드 섹션 -->




        <div class="container mt-3">
            <div class="d-flex justify-content-between align-items-center my-1">
                <span class="h4">영상 편집자 구합니다</span>
                <div class="postmenu">
                    <span class="posterror mx-3 text-danger"></span>
                    <button class="btn btn-outline-dark postcheck">글쓰기</button>
                </div>
            </div>
            <table class="table table-bordered container">
                <thead class="table-dark">
                    <tr>
                        <th class="col-1 text-center">작성자</th>
                        <th class="col-2 text-center">제목</th>
                        <th class="col-6 text-center">내용</th>
                        <th class="col-3 text-center">작성일</th>
                    </tr>
                </thead>
                <tbody id="postList">
                    <% post.forEach(data=>{ %>


                        <tr>
                            <td class="col-1 text-center">
                                <%=data.username%>
                            </td>
                            <td class="col-2 text-center">
                                <%=data.title%>
                            </td>
                            <td class="col-6 text-center">
                                <%=data.description%>
                            </td>
                            <td class="col-3 text-center">
                                <%=data.date%>
                            </td>
                        </tr>


                        <% }) %>
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center my-1">
                <span class="h4">영상 편집 해드립니다</span>
                <div class="postmenu">
                    <span class="posterror mx-3 text-danger"></span>
                    <button class="btn btn-outline-dark postcheck">글쓰기</button>
                </div>
            </div>
            <table class="table table-bordered container">
                <thead class="table-dark">
                    <tr>
                        <th class="col-1 text-center">작성자</th>
                        <th class="col-2 text-center">제목</th>
                        <th class="col-6 text-center">내용</th>
                        <th class="col-3 text-center">작성일</th>
                    </tr>
                </thead>
                <tbody id="postList">
                    <% post.forEach(data=>{ %>


                        <tr>
                            <td class="col-1 text-center">
                                <%=data.username%>
                            </td>
                            <td class="col-2 text-center">
                                <%=data.title%>
                            </td>
                            <td class="col-6 text-center">
                                <%=data.description%>
                            </td>
                            <td class="col-3 text-center">
                                <%=data.date%>
                            </td>
                        </tr>


                        <% }) %>
                </tbody>
            </table>

        </div>

